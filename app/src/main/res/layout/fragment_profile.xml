<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile_placeholder"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image"
                android:text="Ваше ім'я"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Редагування профілю"
                android:layout_below="@id/profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />
        </RelativeLayout>

        <!-- Profile Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваші налаштування"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:onClick="onCurrencyClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Валюта:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UAH, ₴"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:onClick="onLanguageClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мова додатку:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Українська"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>

        <!-- Add more settings here -->

        <!-- Support Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Допомога"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:onClick="onFAQClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Часті запитання" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:onClick="onSupportClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Команда підтримки" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Розв'яжіть конкретну проблему"
                android:textColor="?android:attr/textColorSecondary" />
        </LinearLayout>

        <!-- Additional Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Додатково"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:onClick="onLegalTermsClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Юридичні умови" />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:onClick="onLogoutClick">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вийти"
                android:textColor="#FF0000" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Версія додатка 0.1"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
